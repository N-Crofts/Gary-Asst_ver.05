# Copy to .env and fill these in
OPENAI_API_KEY=sk-xxxx
BING_API_KEY=xxxx
AZURE_CLIENT_ID=xxxx
AZURE_TENANT_ID=xxxx
AZURE_CLIENT_SECRET=xxxx
MAILBOX_ADDRESS=sorum.crofts@rpck.com

# Calendar provider configuration
CALENDAR_PROVIDER=mock
# Microsoft Graph settings (used when CALENDAR_PROVIDER=ms_graph)
MS_TENANT_ID=xxxx
MS_CLIENT_ID=xxxx
MS_CLIENT_SECRET=xxxx
MS_USER_EMAIL=user@example.com

# Mail driver â€” default to console to avoid accidental sends
MAIL_DRIVER=console

# SMTP settings (used when MAIL_DRIVER=smtp)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# SendGrid settings (used when MAIL_DRIVER=sendgrid)
SENDGRID_API_KEY=

# Common mail settings
DEFAULT_SENDER=gary@rpck.com
# Comma-separated list of recipients
DEFAULT_RECIPIENTS=bizdev@rpck.com
# Allow POST/GET to override recipients array when true
ALLOW_RECIPIENT_OVERRIDE=false

# Timezone for subject formatting
TIMEZONE=America/New_York

# Executive profile configuration
EXEC_PROFILE_ID=default

# LLM configuration
LLM_ENABLED=false
LLM_MODEL=gpt-4o-mini
LLM_TIMEOUT_MS=800

# News enrichment configuration
NEWS_ENABLED=false
NEWS_PROVIDER=bing
NEWS_API_KEY=
NEWS_CACHE_TTL_MIN=60
NEWS_MAX_ITEMS=5

# Calendar memory configuration
LOOKBACK_DAYS=90
MEMORY_MAX_ITEMS=3

# Email format configuration
INCLUDE_PLAINTEXT=true
PREVIEW_SUBJECT_SUFFIX=" [Preview]"

# Scheduler configuration
RUN_SCHEDULER=0
SCHEDULER_CRON="0 8 * * 1-5"
SCHEDULER_TIMEZONE="America/New_York"

# Observability configuration
OBS_ENABLED=true
SENTRY_DSN=

# Optional for later
# DATABASE_URL=postgresql://user:pass@localhost:5432/gary
